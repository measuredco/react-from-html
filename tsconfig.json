{
  "compilerOptions": {
    "outDir": "lib",
    "declaration": true,
    "jsx": "react",
    "module": "commonjs",
    "sourceMap": true,
    "strict": true,
    "target": "es5",

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,

    "lib": ["es2017", "dom"]
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/__tests__"]
}
